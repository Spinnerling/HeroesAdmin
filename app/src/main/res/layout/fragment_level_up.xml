<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_green_medium"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".LevelUpFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:tag="g">

            <Button
                android:id="@+id/levelUpBackButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="button"
                android:text="Back"
                android:textColor="#000000"
                app:strokeColor="#000000"
                app:strokeWidth="2dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/levelUpPlayerNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Player Name"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/levelUpExpRemText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="325 EXP"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />
            </LinearLayout>

            <Button
                android:id="@+id/levelUpApplyButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="button"
                android:text="Apply"
                android:textColor="#000000"
                app:strokeColor="#000000"
                app:strokeWidth="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="2"
            android:background="@color/background_green_light"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:background="@color/background_green_extralight"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/guaranteeTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#77000000"
                    android:gravity="center"
                    android:text="GARANTI"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/guaranteeButton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:backgroundTint="@color/background_green_extralight"
                    android:contentDescription="button"
                    android:src="@mipmap/ic_tiger_foreground"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/guaranteeCostText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#77000000"
                    android:gravity="center"
                    android:text="X EXP"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/otherExpSinkTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#77000000"
                    android:gravity="center"
                    android:text="ANNAT"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/otherExpSinkEditText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="30dp"
                    android:layout_weight="3"
                    android:ems="10"
                    android:hint="Amount"
                    android:inputType="number"
                    android:textAlignment="center" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/levelUpHealerButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFF2E1"
                android:contentDescription="button"
                android:text="Helare"
                android:textColor="#000000"
                app:strokeColor="#A6A6A6"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/levelUpRogueButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#121212"
                android:contentDescription="button"
                android:text="OdÃ¥ga" />

            <Button
                android:id="@+id/levelUpMageButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#6C3CD8"
                android:contentDescription="button"
                android:text="Magiker" />

            <Button
                android:id="@+id/levelUpKnightButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FBCF5E"
                android:contentDescription="button"
                android:text="Riddare"
                android:textColor="#000000" />

            <Button
                android:id="@+id/levelUpWarriorButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#964B00"
                android:contentDescription="button"
                android:text="Krigare"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/subclassListBackground"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="@color/background_green_light"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/specialClassList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/upgrade1button"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:backgroundTint="#FFFFFF"
                    android:contentDescription="button"
                    android:src="@mipmap/ic_tiger_foreground"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/upgrade1exp"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#77FFFFFF"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Owned"
                    android:textAlignment="center"
                    android:textColor="#191919"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/upgrade2button"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:backgroundTint="#FFFFFF"
                    android:contentDescription="button"
                    android:src="@mipmap/ic_tiger_foreground"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/upgrade2exp"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#77FFFFFF"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="50 EXP"
                    android:textAlignment="center"
                    android:textColor="#191919"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/upgrade3button"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:backgroundTint="#FFFFFF"
                    android:contentDescription="button"
                    android:src="@mipmap/ic_tiger_foreground"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/upgrade3exp"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#77FFFFFF"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="75 EXP"
                    android:textAlignment="center"
                    android:textColor="#191919"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|top"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|top"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/upgrade4button"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:backgroundTint="#FFFFFF"
                            android:contentDescription="button"
                            android:src="@mipmap/ic_tiger_foreground"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <TextView
                            android:id="@+id/upgrade4exp"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="#77FFFFFF"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="100 EXP"
                            android:textAlignment="center"
                            android:textColor="#191919"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|top"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/upgrade5button"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:backgroundTint="#FFFFFF"
                            android:contentDescription="button"
                            android:src="@mipmap/ic_tiger_foreground"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <TextView
                            android:id="@+id/upgrade5exp"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="#77FFFFFF"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="100 EXP"
                            android:textAlignment="center"
                            android:textColor="#191919"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/warriorList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/warrior1button"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:backgroundTint="#FFFFFF"
                    android:contentDescription="button"
                    android:src="@mipmap/ic_tiger_foreground"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/warrior1exp"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#77FFFFFF"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Owned"
                    android:textAlignment="center"
                    android:textColor="#191919"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|top"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/warrior2button"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:backgroundTint="#FFFFFF"
                            android:contentDescription="button"
                            android:src="@mipmap/ic_tiger_foreground"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <TextView
                            android:id="@+id/warrior2exp"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="#77FFFFFF"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="100 EXP"
                            android:textAlignment="center"
                            android:textColor="#191919"
                            android:textSize="16sp" />

                        <ImageButton
                            android:id="@+id/warrior4button"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:backgroundTint="#FFFFFF"
                            android:contentDescription="button"
                            android:src="@mipmap/ic_tiger_foreground"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <TextView
                            android:id="@+id/warrior4exp"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="#77FFFFFF"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="100 EXP"
                            android:textAlignment="center"
                            android:textColor="#191919"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/warrior3button"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:backgroundTint="#FFFFFF"
                            android:contentDescription="button"
                            android:src="@mipmap/ic_tiger_foreground"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <TextView
                            android:id="@+id/warrior3exp"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="#77FFFFFF"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="100 EXP"
                            android:textAlignment="center"
                            android:textColor="#191919"
                            android:textSize="16sp" />

                        <ImageButton
                            android:id="@+id/warrior5button"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:backgroundTint="#FFFFFF"
                            android:contentDescription="button"
                            android:src="@mipmap/ic_tiger_foreground"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <TextView
                            android:id="@+id/warrior5exp"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="#77FFFFFF"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="100 EXP"
                            android:textAlignment="center"
                            android:textColor="#191919"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>