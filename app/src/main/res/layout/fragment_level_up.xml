                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="button"
                android:text="Apply"
                android:textColor="#000000"
                app:strokeColor="#000000"
                app:strokeWidth="2dp" />
        </LinearLayout>

