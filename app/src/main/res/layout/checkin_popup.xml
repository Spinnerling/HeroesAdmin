<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_green_medium"
        android:text="Checking In..."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/checkInPopupNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="ticket name"
        android:textAlignment="center"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/background_green_medium"
        android:text="Recruits"
        android:textSize="18dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/cp_recruitsAmount"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Amount"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/checkInKlippkortTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_green_medium"
        android:text="Betalat med Klippkort"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"/>

    <CheckBox
        android:id="@+id/checkInKlippkortCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Klippt klippkort"
        android:background="@color/background_green_light"
        android:textSize="16dp"
        android:textStyle="bold"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/checkinCancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="Cancel"
            android:textColor="#000000"
            app:strokeColor="#000000"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/checkinAcceptButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:backgroundTint="@color/buttonGreen"
            android:text="Accept" />
    </LinearLayout>


</LinearLayout>