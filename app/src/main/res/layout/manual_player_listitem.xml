<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dp">

    <TextView
        android:id="@+id/player_first_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="First Name"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/player_last_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player_last_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Last Name"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/player_age"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/player_first_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Age"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/player_last_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_names"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Booker Names"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/booker_phones"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_first_name" />

    <TextView
        android:id="@+id/booker_names"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Booker Names"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/booker_phones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_names" />

    <TextView
        android:id="@+id/textView_phones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Phones"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/booker_emails"
        app:layout_constraintStart_toEndOf="@+id/booker_names"
        app:layout_constraintTop_toBottomOf="@+id/player_last_name" />

    <TextView
        android:id="@+id/booker_phones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Booker Phones"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/booker_emails"
        app:layout_constraintStart_toEndOf="@+id/booker_names"
        app:layout_constraintTop_toBottomOf="@+id/textView_phones" />

    <TextView
        android:id="@+id/textView_emails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Emails"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/booker_addresses"
        app:layout_constraintStart_toEndOf="@+id/booker_phones"
        app:layout_constraintTop_toBottomOf="@+id/player_age" />

    <TextView
        android:id="@+id/booker_emails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Booker Emails"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/booker_addresses"
        app:layout_constraintStart_toEndOf="@+id/booker_phones"
        app:layout_constraintTop_toBottomOf="@+id/textView_emails" />

    <TextView
        android:id="@+id/textView_addresses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Addresses"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/booker_emails"
        app:layout_constraintTop_toBottomOf="@+id/player_age" />

    <TextView
        android:id="@+id/booker_addresses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Booker Addresses"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/booker_emails"
        app:layout_constraintTop_toBottomOf="@+id/textView_addresses" />

    <Button
        android:id="@+id/mlpli_moreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/booker_addresses" />

</androidx.constraintlayout.widget.ConstraintLayout>
